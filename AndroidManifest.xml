<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.java"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name=".example.SimpleNotificationExampleActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
                android:name=".notification.NotificationBroadcastReceiver"
                android:exported="true">
            <intent-filter>
                <action android:name="retry_failed_message_broadcast"/>
                <action android:name="accept_friend_request_broadcast"/>
                <action android:name="reject_friend_request_broadcast"/>
                <action android:name="message_notification_cancelled"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
